<CreateScreen_TestWeek>:
    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            title: "Example Tabs"

        MDTabs:
            id: tabs
            on_tab_switch: root.on_tab_switch(*args)

        MDRaisedButton:
            text: "save"
            size: 200,200
            size_hint: None,None

<SubjectTab>:
    orientation: "vertical"
    MDTextField:
        id: subject
        hint_text: "subject"
        text: root.subject
    TextInput:
        id: learningcontent
        multiline: True
        text: root.learningcontent
    MDBoxLayout:
        MDLabel:
            id: date
            text: str(root.date)
        MDRaisedButton:
            text: "change date"
            on_release: root.opendatpicker()

    MDRaisedButton:
        text: "save subject"
