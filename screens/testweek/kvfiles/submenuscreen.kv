#:import BackButton plannings.screens.backbutton

<SubMenuScreen_TestWeek>:
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            id: toolbar
            title: "subjects"
            right_action_items: [["folder-plus", lambda x: root.new()]]
        ScrollView:
            MDList:
                id: subjectlist
        BackButton:

<SubjectItem>:
    text: root.get_text()
    secondary_text: "- " + root.print_date_time()
    tertiary_text: "- " + root.subjectr.learningcontent
    on_release: root.master.edit_subject(*args)

    ImageLeftWidget:
        source: root.get_image()

    IconRightWidget:
        icon: "trash-can"
        on_release: root.delete_gui(*args)
