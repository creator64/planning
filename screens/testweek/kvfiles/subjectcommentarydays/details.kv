#:import BackButton plannings.screens.backbutton

<Details_TestWeek_SubjectCommentaryDays>:
    BoxLayout:
        orientation: "vertical"
        MDToolbar:
            title: "edit"
        MDGridLayout:
            cols: 2
            spacing: "25dp"
            MDRaisedButton:
                id: daymenubutton
                md_bg_color: (100/255, 149/255, 237/255 , 1)
                size_hint: 0.3, None
                on_release: root.show_menu("day")
            MDRaisedButton:
                id: subjectmenubutton
                md_bg_color: (100/255, 149/255, 237/255 , 1)
                size_hint: 0.3, None
                on_release: root.show_menu("subject")
        MDTextField:
            id: content
            size_hint_x: 1
            max_height: "200dp"
            multiline: True
            mode: "rectangle"
            #line_color_normal: 0.5, 0.8, 0, 1
            color_normal: 0.5, 1, 0, 1
        BackButton:
            on_release: root.save() # doesnt overwrite the main func of BackButton; it does both funcs :D
